<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 2</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action behavior="Platform" id="11" name="Set enabled" type="Kitten">
                    <param id="0" name="State">0</param>
                </action>
                <action id="4" name="Set animation" type="Kitten">
                    <param id="0" name="Animation">&quot;Loop&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
                <action behavior="Fade" id="1" name="Start fade" type="press" />
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" name="On any key pressed" type="Keyboard" />
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Layout 1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition behavior="Fade" id="0" name="On fade out finished" type="press" />
            </conditions>
            <actions>
                <action behavior="Fade" id="0" name="Restart fade" type="press" />
            </actions>
        </event-block>
    </events>
</c2eventsheet>
